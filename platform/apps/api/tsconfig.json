{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/prisma": ["prisma"],
      "@/shared": ["../../../packages/shared/src"],
      "@keepr/sdk": ["../../packages/sdk/dist"],
      "@keepr/sdk/*": ["../../packages/sdk/dist/*"],
      "@keepr/shared": ["../../packages/shared/dist"],
      "@keepr/shared/*": ["../../packages/shared/dist/*"]
    },
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/main.ts"],
  "exclude": ["node_modules", "dist"]
}
