{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "cd ../../packages/shared && pnpm run build && cd ../../apps/api && pnpm run build && pnpm prisma generate",
    "installCommand": "pnpm install",
    "outputDirectory": ".",
    "functions": {
        "api/**/*.js": {
            "runtime": "@vercel/node@3",
            "maxDuration": 30,
            "memory": 1024
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index.js"
        }
    ]
}