# Database
PLATFORM_DATABASE_URL=postgresql://user:password@localhost:5432/campreserv_platform

# Redis (optional - gracefully degrades if not set)
PLATFORM_REDIS_URL=redis://localhost:6379

# Server
PORT=4000
NODE_ENV=development

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===========================================
# SECURITY SETTINGS
# ===========================================

# CSRF Protection
COOKIE_SECRET=your-cookie-secret-for-csrf-protection

# Account Lockout (brute force protection)
LOCKOUT_MAX_ATTEMPTS=5              # Failed attempts before lockout
LOCKOUT_DURATION_MS=900000          # 15 minutes in milliseconds
LOCKOUT_WINDOW_MS=3600000           # 1 hour window for counting attempts

# Rate Limiting (per minute unless noted)
RATE_LIMIT_GLOBAL=120               # Global requests per minute per IP
RATE_LIMIT_LOGIN=10                 # Login attempts per 15 minutes
RATE_LIMIT_API=60                   # API requests per minute
RATE_LIMIT_DEVELOPER_API=1000       # Developer API requests per minute

# PII Encryption (AES-256-GCM)
# IMPORTANT: Use a strong 32+ character key in production
PII_ENCRYPTION_KEY=your-32-character-encryption-key-here
PII_ENCRYPTION_KEY_VERSION=v1

# 2FA/TOTP Settings
TOTP_APP_NAME=CampReserv

# Security Alerting (Slack/Discord webhook)
SECURITY_ALERTING_ENABLED=false
SECURITY_ALERT_WEBHOOK=https://hooks.slack.com/services/xxx/yyy/zzz

# Password Breach Checking (HaveIBeenPwned)
# Set to false to disable in development
HIBP_CHECK_ENABLED=true
